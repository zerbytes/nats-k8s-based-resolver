    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Manager",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "env": {
                "NATS_CREDS": "${workspaceFolder}/nats-server-v2.11.6-linux-amd64/sys.creds",
                "NATS_URL": "nats://localhost:4223",
            }
        },
        {
            "name": "Launch Resolver",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "resolver"
            ],
            "env": {
                "NATS_CREDS": "${workspaceFolder}/nats-server-v2.11.6-linux-amd64/sys.creds",
                "NATS_URL": "nats://localhost:4223",
            }
        }
    ]
}